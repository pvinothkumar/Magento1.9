<?xml version="1.0"?>
<config>
    <modules>
        <Gmi_Brand>
            <version>0.1.0</version>
        </Gmi_Brand>
    </modules>
    <frontend>
        <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>Gmi_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
        <layout>
            <updates>
                <brand>
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <brand>
                <use>admin</use>
                <args>
                    <module>Gmi_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <brand module="brand">
                <title>Brand</title>
                <sort_order>71</sort_order>              
                <children>
                    <items module="brand">
                        <title>Manage Brands</title>
                        <sort_order>0</sort_order>
                        <action>brand/adminhtml_brand</action>
                    </items>
                </children>
            </brand>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <brand>
                            <title>Brand Module</title>
                            <sort_order>200</sort_order>
                        </brand>
                    </children>
                </admin>
            </resources>  
        </acl>
        <layout>
            <updates>
                <brand>
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </adminhtml>  
    <global>
        <models>
            <brand>
                <class>Gmi_Brand_Model</class>
                <resourceModel>brand_mysql4</resourceModel>
            </brand>
            <brand_mysql4>
                <class>Gmi_Brand_Model_Mysql4</class>
                <entities>
                    <brand>
                        <table>brand</table>
                    </brand>
                </entities>
            </brand_mysql4>
        </models>
        <resources>
            <brand_setup>
                <setup>
                    <module>Gmi_Brand</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <blocks>
            <brand>
                <class>Gmi_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
            <brand>
                <class>Gmi_Brand_Helper</class>
            </brand>
        </helpers>
    </global>
</config> 